<div class="form-container">
    <form class="text-center border border-light p-5" method="POST">

        <p class="h4 mb-4">Login</p>

        <!-- username -->
        <div class="md-form">
            <input type="text" name="username" id="materialLoginFormUsername" class="form-control">
            <label for="materialLoginFormUsername">Username</label>
        </div>

        <!-- Password -->
        <div class="md-form">
            <input type="password" name="password" id="materialLoginFormPassword" class="form-control">
            <label for="materialLoginFormPassword">Password</label>
        </div>

        <!-- Sign in button -->
        <button class="btn btn-info btn-block my-4" type="submit">Login</button>

        <!-- Register -->
        <p>Not a member?
            <a href="/user/register">Register</a>
        </p>
    </form>
</div>