<div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h1>Add lecture to course {{course.title}}</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="text-center border border-light p-5" method="POST">

                <div class="md-form">
                    <input type="text" name="title" id="materialAddLectureFormTitle" class="form-control">
                    <label for="materialAddLectureFormTitle">Title</label>
                </div>

                <div class="md-form">
                    <input type="text" name="videoUrl" id="materialAddLectureFormVideoUrl" class="form-control">
                    <label for="materialAddLectureFormVideoUrl">Video Url</label>
                </div>

                <button class="btn btn-default">Submit</button>
        </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a href="" class="btn btn-default btn-rounded mb-4" data-toggle="modal" data-target="#modalLoginForm">Add
        Lecture</a>
</div>

{{#if lectures}}
<h2 class="text-center">No Lectures in this course</h2>
{{else}}
<h2 class="text-center">There are {{course.lectures.length}} lectures in this course</h2>

<ul class="list-group">
    {{#each course.lectures}}
    <li class="list-group-item">
        <h5 class="mb-1">{{title}}</h5>
        <span class="float-right">
            <a href="/lecture/delete/{{_id}}"><button class="btn btn-danger">Delete</button></a>
        </span>
        {{/each}}
    </li>
    {{/if}}
</ul>