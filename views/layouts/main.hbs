                        <li class="nav-item">
                            <a class="nav-link" href="/course/all">All Courses</a>
                        </li>
                        {{/if}}

                        <li class="nav-link">
                            Welcome, {{user.username}}
                        </li>
                        <li class="nav-item">
                            <form id="logout-form" action="/user/logout" method="post"></form>
                            <a class="nav-link"
                                href="javascript:document.getElementById('logout-form').submit()">Logout</a>
                        </li>

                        {{else}}

                        <li class="nav-item">
                            <a class="nav-link" href="/user/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/register">Register</a>
                        </li>
                        {{/if}}

                    </ul>
                </div>
            </div>
        </nav>
