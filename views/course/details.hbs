    <h1 class="my-4">Course title : {{course.title}}
    </h1>

    <div class="row">
        <div class="col-md-8">
            <img class="img-fluid" src={{course.imageUrl}} alt="{{course.title}}" />
        </div>
        <div class="col-md-4 text-center">
            <h3 class="my-3">Course Description</h3>
            <p>{{course.description}}</p>
            {{#if enrolled}}
            <span class="badge badge-pill badge-success">enrolled</span>
            {{else}}
            <form id="enroll-form" action="/course/enroll/{{course.id}}" method="post"></form>
            <a href="javascript:document.getElementById('enroll-form').submit()"><button type="button"
                    class="btn btn-info">Enroll</button></a>
            {{/if}}
        </div>
    </div>

    {{#if enrolled}}
    <h3 class="text-center">Lectures List</h3>
    <ul class="list-group">
        {{#each course.lectures}}
        <li class="list-group-item">
            <h5 class="mb-1">{{title}}</h5>
            <span class="float-right">
                <a href="/course/{{course}}/lecture/{{_id}}"><button class="btn btn-secondary">Play</button></a>

            </span>
            {{/each}}
        </li>
    </ul>
    {{else}}
    <h4 class="text-center">To get full access please enroll the course</h4>
    {{/if}}